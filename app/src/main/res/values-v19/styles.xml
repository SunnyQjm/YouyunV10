<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/application_theme_color</item>
        <item name="colorPrimaryDark">@color/application_theme_color</item>
        <item name="colorAccent">@color/application_theme_color</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--&lt;!&ndash;设置状态栏的颜色&ndash;&gt;-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="FullToStatusBarTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/welcome</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="WelcomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/welcome</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>

</resources>