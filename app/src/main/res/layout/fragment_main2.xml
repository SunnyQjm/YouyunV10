<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sunny.youyun.wifidirect.activity.single_trans.main.main_fragment.MainFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/icon_onetoone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.39999998"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <com.sunny.youyun.views.RichText
            android:id="@+id/btn_i_want_receive_file"
            android:text="@string/i_want_to_receive"
            app:drawable_src="@drawable/icon_download"
            app:drawable_width="@dimen/imgBtn_drawable_size"
            app:drawable_height="@dimen/imgBtn_drawable_size"
            style="@style/ImageButtonStyle"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_i_want_send_file"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <com.sunny.youyun.views.RichText
            android:id="@+id/btn_i_want_send_file"
            android:text="@string/i_want_to_send"
            app:drawable_src="@drawable/icon_upload"
            app:drawable_width="19dp"
            app:drawable_height="19dp"
            style="@style/ImageButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
