<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/bar_item"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/btn_i_want_send_file"
            style="@style/WifiDirectMainItemStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/one"
                android:background="@color/transparent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.39999998" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要传文件"
                android:background="@color/transparent"
                android:textColor="@color/text_gray"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/img1"
                app:layout_constraintRight_toRightOf="@+id/img1"
                app:layout_constraintLeft_toLeftOf="@+id/img1"/>
        </android.support.constraint.ConstraintLayout>
        <View
            android:layout_width="1dp"
            android:background="@color/line_gray"
            android:layout_height="match_parent"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/btn_createGroupTrans"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/WifiDirectMainItemStyle"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/group"
                android:background="@color/transparent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.39999998" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建群组"
                android:textColor="@color/text_gray"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/img2"
                app:layout_constraintRight_toRightOf="@+id/img2"
                app:layout_constraintLeft_toLeftOf="@+id/img2" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <View
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/btn_zXing"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/WifiDirectMainItemStyle"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/scanjoin"
                android:layout_marginLeft="8dp"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.39999998" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="扫码加入"
                android:background="@color/transparent"
                android:textColor="@color/text_gray"
                app:layout_constraintLeft_toLeftOf="@+id/img3"
                app:layout_constraintRight_toRightOf="@+id/img3"
                app:layout_constraintTop_toBottomOf="@+id/img3" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="1dp"
            android:background="@color/line_gray"
            android:layout_height="match_parent"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/btn_searchConnect"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/WifiDirectMainItemStyle"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/searchjoin"
                android:background="@color/transparent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.39999998" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索加入"
                android:textColor="@color/text_gray"
                android:background="@color/transparent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/img4"
                app:layout_constraintRight_toRightOf="@+id/img4"
                app:layout_constraintLeft_toLeftOf="@+id/img4" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
