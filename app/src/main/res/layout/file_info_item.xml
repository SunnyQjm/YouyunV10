<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/ripple_bg_white"
    android:layout_height="@dimen/file_info_item_height">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/code"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/file_info_item_example_file_name"
        android:textColor="@color/text_gray"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/img_icon"
        app:layout_constraintTop_toTopOf="@+id/img_icon"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@+id/checkBox"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-6-10"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/img_icon"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.4MB"
        app:layout_constraintLeft_toRightOf="@+id/tv_description"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_description"
        android:layout_marginStart="20dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:button="@null"
        android:background="@drawable/checkbox_style"
        android:layout_marginRight="16dp"
        android:clickable="false"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>