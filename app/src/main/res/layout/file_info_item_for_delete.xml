<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/file_info_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/code"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/file_info_item_example_file_name"
        android:textColor="@color/text_gray"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/img_icon"
        app:layout_constraintTop_toTopOf="@+id/img_icon"
        app:layout_constraintEnd_toStartOf="@+id/img_delete"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-6-10"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/img_icon"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.4MB"
        app:layout_constraintLeft_toRightOf="@+id/tv_time"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_time"
        android:layout_marginStart="20dp" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/icon_setting_delete"
        android:layout_marginRight="13dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="13dp" />


</android.support.constraint.ConstraintLayout>